<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/labg2"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/holo_green_light"
                android:onClick="submit"
                android:text="SUBMIT" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="214dp"
                android:layout_height="53dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_orange_light"
                android:text="Language Quiz"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="351dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:text="1.)how many languages are spoken around the world today?"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="700"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/ans1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7000"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="70000"
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="2.) Hakuna matata (meaning no worries) was a phrase made popular around the world by the Lion King, but which language is it? "
                android:textColor="@android:color/background_dark" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Igbo "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/ans2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Swahili "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Afrikaans "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yoruba "
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="359dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:text="3.)What is the origin of the Latin alphabet used by the Romans? "
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ans3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="borrowed from the Etruscan language? "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="based upon the Greek language?"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="created by the Romans themselves"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="derived from Hebrew script?"
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="354dp"
                android:layout_height="46dp"
                android:layout_marginTop="15dp"
                android:text="4.)What is generally considered to be the first form of written language? "
                android:textColor="@android:color/background_dark" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">>

                <RadioButton
                    android:id="@+id/ans4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuneiform script "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Egyptian hieroglyphs"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cyrillic alphabet "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phoenician script "
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="351dp"
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:text="5.)Where does the word 'alphabet' come from?  "
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">>

                <RadioButton
                    android:id="@+id/radioButton19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From Sanskrit "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/ans5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From the first two letters of the Greek Alphabet"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From the name of the Greek god Alphaeus "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From the Egyptian word for 'writing' "
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>