<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mabg3"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/holo_green_light"
                android:onClick="submit"
                android:text="Submit" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="143dp"
                android:layout_height="47dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_orange_light"
                android:text="Math Quiz"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="325dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:text="1.)Find the period of the function f(x)=cos(θ/3)"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ans1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6π"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3π"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1/3π"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2π"
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="319dp"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:text="2.) ∫17dx"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ans2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17x+C "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.7x+C "
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="−53cos(3x−1)+C"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="−5sin(3x−1)+C"
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="341dp"
                android:layout_height="58dp"
                android:layout_marginTop="15dp"
                android:text="3.)	Convert the angle 176°15'56'' to the decimal degree format "
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="176.1556"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="176.1"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/ans3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="176.266"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="176.2"
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="319dp"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:text="4.)Find the value of cot(π/3)"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">>

                <RadioButton
                    android:id="@+id/radioButton15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.276"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/ans4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.5773"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.1124"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.6732" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="319dp"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:text="5.)	What is the common difference in the following arithmetic series: 2.5,6.4,10.3,...? "
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">>

                <RadioButton
                    android:id="@+id/ans5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.9"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7.8"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.56"
                    android:textColor="@android:color/background_dark" />

                <RadioButton
                    android:id="@+id/radioButton18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 3.2"
                    android:textColor="@android:color/background_dark" />
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>